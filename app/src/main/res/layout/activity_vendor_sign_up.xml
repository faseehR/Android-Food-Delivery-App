<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logoImageSignUp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appNameSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Sign Up"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp" />

        <!-- Vendor Name -->
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/vendorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter shop name"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:inputType="textPersonName"
            android:background="@android:drawable/edit_text" />

        <!-- Email -->
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/vendorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text" />

        <!-- Password -->
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/vendorPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text" />

        <!-- Catch Phrase -->
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catch Phrase"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/vendorCatchPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your catch phrase"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:inputType="text"
            android:background="@android:drawable/edit_text" />

        <!-- Upload Logo -->
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Logo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/vendorLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Vendor Logo"
            android:layout_marginTop="10dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/vendorSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp" />

        <!-- Already have an account? -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign In"
                android:textSize="14sp"
                android:textColor="#0000FF"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
